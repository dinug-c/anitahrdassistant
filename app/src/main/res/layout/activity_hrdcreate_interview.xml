<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HRDCreateInterviewActivity"
    android:background="@drawable/blueshape">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="30dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kode Undangan Waawancara"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:fontFamily="@font/monsreg"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2405 - 5446 - 3001"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:fontFamily="@font/monsbold"
            android:layout_gravity="center_horizontal"/>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="30dp"
            android:src=""/>

        <Button
            android:id="@+id/tanggal_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/yellow_btn"
            android:text="Bagikan melalui Email"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/monsebold"
            />


    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>